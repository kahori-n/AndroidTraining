<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
	<item>
		<shape android:shape="rectangle" >
		    <!-- solid: 塗りつぶし -->
			<solid
			    android:color="#000000"/>
		        <!-- stroke: 枠線 -->
			<stroke
			    android:width="1dp"
			    android:color="#000000"/>
		</shape>
	</item>
	<item>
		<shape android:shape="oval" >
		
		    <!-- solid: 塗りつぶし -->
			<solid
			    android:color="@color/oval_color"/>
		        <!-- stroke: 枠線 -->
			<stroke
			    android:width="1dp"
			    android:color="@color/oval_color"/>
		</shape>
	</item>
</layer-list>